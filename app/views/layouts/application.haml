%html.no-js{:lang => "en"}

    %head

        -# ==========================================================================
        -# Head
        -# ==========================================================================

        %meta{:charset => "utf-8"}

        %title= @title.present? ? "#{@title} | myAudi" : "myAudi"
        %meta{:name => "description", :content => ""}

        -# Mobile
        -# ==========================================================================

        %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}

        %link{:href => "/favicon.ico", :rel => "shortcut icon"}

        -# CSS
        -# ==========================================================================
        = stylesheet_link_tag 'bootstrap.min.css'
        /= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'

        = stylesheet_link_tag 'responsive-calendar.css'
        = stylesheet_link_tag 'fuelux.css'
        = stylesheet_link_tag 'bootstrap-tour.min.css'
        = stylesheet_link_tag 'main.css'

    %body.fuelux

        /# ==========================================================================
        /# Content
        /# ==========================================================================

        = partial 'shared/nav'

        #main.container

            = yield


        = partial 'shared/footer'
        /# JS
        /# ==========================================================================

        /# jQuery

        = javascript_include_tag 'https://code.jquery.com/jquery-2.1.1.min.js'

        - if Padrino.env == :production
            %script
                (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

                ga('create', 'UA-57356829-1', 'auto');
                ga('send', 'pageview');


        / Bootstrap
        = javascript_include_tag 'ondomready.js'
        = javascript_include_tag 'polyfills.js'
        = javascript_include_tag 'augment.js'
        = javascript_include_tag 'holder.js'
        = javascript_include_tag 'bootstrap-tour.min.js'

        /= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js'
        = javascript_include_tag 'bootstrap.min.js'

        = javascript_include_tag 'underscore.js'
        = javascript_include_tag 'typeahead.js'

        / Responsive calendar
        = javascript_include_tag 'responsive-calendar.js'

        / Fuel UX
        = javascript_include_tag 'fuelux.js'

        / Underscore
        = javascript_include_tag 'underscore.js'

        / Twitter typeahead
        = javascript_include_tag 'typeahead.js'

        /# Custom JS
        /- if Padrino.env == :production
        /= javascript_include_tag 'mini/main.min.js'
        /- else
        = javascript_include_tag 'finance.js'
        = javascript_include_tag 'book.js'
        = javascript_include_tag 'alerts.js'
        = javascript_include_tag 'trip.js'
        = javascript_include_tag 'message.js'
        = javascript_include_tag 'tinymce.js'
        = javascript_include_tag 'add_test.js'
        = javascript_include_tag 'search.js'
        = javascript_include_tag 'dashboards.js'
        = javascript_include_tag 'tour.js'
        = javascript_include_tag 'main.js'