%div{ id: 'stats', class: 'modal fade', tabindex: '-1', role: 'dialog' }
  .modal-dialog
    .modal-content
      .modal-header
        %button{ type: 'button', class: 'close', 'data-dismiss' => 'modal' } &times;
        %h3.modal-title Content statistics
      .modal-body
        %table.table.table-striped
          %thead
            %tr
              %th Metric
              %th Original
              %th Test A
          %tbody
            - ['Views', 'UVs', 'Prospects', 'Leads', 'Sales'].each do |stat|
              %tr
                %td
                  %b= stat
                %td= (10..100).to_a.sample
                %td= (10..100).to_a.sample
        %hr
        %a.btn.btn-default.btn-100 View detailed statistics



%div{ id: 'screenshot', class: 'modal fade', tabindex: '-1', role: 'dialog' }
  .modal-dialog
    .modal-content
      .modal-header
        %button{ type: 'button', class: 'close', 'data-dismiss' => 'modal' } &times;
        %h3.modal-title A/B test
      .modal-body
        .row.ab_tests
          .col-xs-3
            %input{ type: 'text', value: '100%' }
          .col-xs-9
