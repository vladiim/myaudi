%div{ id: 'info-sign', class: 'modal fade', tabindex: '-1', role: 'dialog' }
  .modal-dialog
    .modal-content
      .modal-header
        %button{ type: 'button', class: 'close', 'data-dismiss' => 'modal' } &times;
        %h3.modal-title Content information
      .modal-body
        %form{ role: 'form' }
          .form-group
            %label Publish date
            %input{ type: 'date', class: 'form-control' }
          .form-group
            %label Action
            %select.form-control
              %option Produce
              %option Approve
              %option Edit
          .form-group
            %label Responsible
            %input{ type: 'text', class: 'form-control', placeholder: 'Admin responsible' }
      .modal-footer
        %a{ class: 'btn btn-default pull-left', 'data-dismiss' => 'modal' } Close
        %a{ class: 'btn btn-primary' } Save

%div{ id: 'flag', class: 'modal fade', tabindex: '-1', role: 'dialog' }
  .modal-dialog
    .modal-content
      .modal-header
        %button{ type: 'button', class: 'close', 'data-dismiss' => 'modal' } &times;
        %h3.modal-title Content approval
      .modal-body
        %a{ class: 'btn btn-success btn-100' } Approve
        %a{ class: 'btn btn-warning btn-100' } Editing required
        %a{ class: 'btn btn-danger btn-100' } Rewrite required
      .modal-footer
        %a{ class: 'btn btn-default', 'data-dismiss' => 'modal' } Close