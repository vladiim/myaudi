%div{ id: 'stats', class: 'modal fade', tabindex: '-1', role: 'dialog' }
  .modal-dialog
    .modal-content
      .modal-header
        %button{ type: 'button', class: 'close', 'data-dismiss' => 'modal' } &times;
        %h3.modal-title Content statistics
      .modal-body
        %ul
          - ['views', 'unique visitors', 'prospects', 'leads', 'sales'].each do |stat|
            %li= "#{ (10..100).to_a.sample } #{ stat } (#{ (1..10).to_a.sample } ave per day)"

