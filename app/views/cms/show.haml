.container
  .row
    .col-xs-10
      %form{ role: 'form' }
        .form-group
          %input{ value: "#{ content.name }", class: 'form-control' }
          %br
          %textarea{ class: 'form-control', rows: 20 }

    .col-xs-2.cms-actions
      - [ 'info-sign', 'comment', 'save', 'flag' ].each do |action|
        %a{ href: '#', class: 'btn btn-default', id: "#{ action }-action" }
          %span{ class: "glyphicon glyphicon-#{ action }" }

%script{ src: '//tinymce.cachefly.net/4.1/tinymce.min.js' }
%script tinymce.init({selector:'textarea',menubar: false,toolbar: ['undo redo | styleselect | bold italic underline | link image | hr | alignleft aligncenter alignright']});