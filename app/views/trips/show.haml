%h3= "#{ @trip.from } to #{ @trip.to }"
%p= "Key Stats: #{ @trip.date } | #{ @trip.grade } | #{ @trip.distance }km | #{ @trip.time } mins"

%a{ class: 'btn btn-primary' } Share this trip

