%ul.list-group
  - @streets.each do |street|
    %li.list-group-item
      %h4= "#{ street.grade } #{ street.from } to #{ street.to }"
      %ul
        - street.grades.each do |grade|
          %li= "#{ grade.grade } #{ grade.type } (#{ grade.reason })"
